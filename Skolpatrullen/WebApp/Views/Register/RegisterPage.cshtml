@model WebApp.ViewModels.UserViewModel
@{
    ViewData["Title"] = "RegisterPage";
}

<form method="post" asp-action="RegisterPage">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Email">Mailadress <label class="text-danger">*</label></label>
            <input asp-for="Email" type="email" placeholder="namn@exempel.se" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="SocialSecurityNr">Personnummer <label class="text-danger">*</label></label>
            <input type="text" asp-for="SocialSecurityNr" placeholder="yyyymmdd-xxxx" class="form-control">
            <span asp-validation-for="SocialSecurityNr" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Password">Lösenord <label class="text-danger">*</label></label>
            <input type="password" asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="RePassword">Lösenord igen <label class="text-danger">*</label></label>
            <input type="password" asp-for="RePassword" class="form-control">
            <span asp-validation-for="RePassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName">Förnamn <label class="text-danger">*</label></label>
            <input type="text" asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastNames">Efternamn <label class="text-danger">*</label></label>
            <input type="text" asp-for="LastNames" class="form-control">
            <span asp-validation-for="LastNames" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Address">Adress</label>
            <input type="text" asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="City">Stad</label>
            <input type="text" asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PostalCode">Postnummer</label>
            <input type="text" asp-for="PostalCode" class="form-control">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Phone">Telefonnummer</label>
            <input type="text" asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Registrera</button>
</form>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registerModal">
    Test modal
</button>

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Existerande konto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Det finns redan ett konto med den eposten. Vill du logga in istället?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
                <a href="/Login" class="btn btn-primary" role="button">Logga in</a>
            </div>
        </div>
    </div>
</div>